        "name": "str?",
        "server": {
            "host": "str",
            "port": "int",
            "username": "str",
            "password": "password",
            "polling_status": "int",
            "polling_events": "int"
        },
        "mqtt": {
            "host": "str",
            "port": "int",
            "username": "str",
            "password": "password",
            "clientId": "str?",
            "cache": "str",
            "retain": "bool"
        },
        "hadiscovery": {
            "sensors_qos": "list(0|1|2)",
            "alarm_qos": "list(0|1|2)"
        },
        "code": "match(\\d{4})?",
        "zoneName": "str",
        "events": {
            "name": "str",
            "icon": "match(mdi:\\w*)"
        },
        "bypass": {
            "name": "str",
            "icon": "match(mdi:\\w*)"
        },
        "zones": [
            {
                "number": "int",
                "contactType": "list(NO|NC)?",
                "device_class": "str?",
                "statusProperty": "list(alarm|open|fault|ok|problem|lowbat)?"
            }
        ]
    },
    "image": "maxill1/{arch}-addon-ialarm-mqtt"
